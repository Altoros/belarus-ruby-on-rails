        <ins></ins>
      </div>
    </div>
    <div class="modal" style="display:none;">
      <div class="overlay"></div>
      <div class="popup">
        <div class="popup_content">
          <h2>Вход</h2>
          <del></del>
          <form action="" method="get">
            <div class="social_list">
              <%= link_to 'Sign up', new_user_registration_path  %>
              <%= link_to image_tag("ico_facebook.png", {:height => 32, :width => 32, :alt => "Sign in with Facebook"}), user_omniauth_authorize_path(:facebook) %>
              <%= link_to image_tag("ico_vk.png", {:height => 32, :width => 32, :alt => "Sign in with Vkontakte"}), user_omniauth_authorize_path(:vkontakte) %>
              <%= link_to image_tag("ico_google_plus.png", {:height => 32, :width => 32, :alt => "Sign in with GoogleApps"}), user_omniauth_authorize_path(:google_apps) %>
              <%= link_to image_tag("ico_twitter.png", {:height => 32, :width => 32, :alt => "Sign in with Twitter"}), user_omniauth_authorize_path(:twitter) %>
              <%= link_to "Sign in with Github", user_omniauth_authorize_path(:github) %>
              <%= link_to image_tag("ico_linkedin.png", {:height => 32, :width => 32, :alt => "Sign in with LinkedIn"}), user_omniauth_authorize_path(:linked_in) %>
            </div>
            <label>Электронная почта</label>
            <div class="error"><input type="text" /></div>
            <label>Пароль</label>
            <div><input type="password" /></div>
            <div class="login">
              <button type="submit"><span>Войти</span></button>
              <div class="links">
                <%= link_to "Забыли пароль?", user_reset_password_path %><br />
                <%= link_to "Нет аккаунта?", new_user_registration_path %>
              </div>
            </div>
          </form>
        </div>
        <div class="t"></div>
        <div class="r"></div>
        <div class="b"></div>
        <div class="l"></div>
        <ins></ins>
        <ins></ins>
        <ins></ins>
        <ins></ins>
      </div>
    </div>
  </body>
</html>
