<h1>Listing custom news</h1>

<p id="notice"><%= notice %></p>

<% if @custom_news.empty? %>

   There is no news at the moment.
      
<% else %>

  <table>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @custom_news.each do |custom_news| %>
    <tr>
      <td><%= custom_news.title %></td>
      <td><%= raw custom_news.content %></td>
      <td><%= link_to 'Show', custom_news %></td>
      <td><%= link_to 'Edit', edit_custom_news_path(custom_news) %></td>
      <td><%= link_to 'Delete', custom_news, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

<% end %>

<br />

<%= link_to 'New Custom news', new_custom_news_path %>

<%= will_paginate @custom_news %>

<% if user_signed_in? and current_user.is_admin? %>
    <%= link_to "UserManagement", { controller: :user_manager } %>
<% end %>
