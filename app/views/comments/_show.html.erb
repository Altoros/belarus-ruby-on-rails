<%= div_for comment do %>
  <div class="comment">
    <b><%= link_to comment.user.profile.full_name, "mailto:#{ comment.user.email }" %></b>
    <!-- <%= distance_of_time_in_words_to_now(comment.created_at) %> ago wrote: -->
    <% if can? :delete, comment %>
        <%= link_to_if(can?(:update, comment), "Edit", edit_article_comment_path(comment.article, comment),
      :remote => true, :title => "click for edit") %>
        <%= link_to "Delete", article_comment_path(comment.article, comment), :method => :delete ,  :confirm => 'Are you sure?', :remote => true %>
    <% end %>

    <div class="upic">
      <%= image_tag userpic_url(comment.user, 49) %>
    </div>
    <div class="comment_text"><%= comment.body %></div>
    <span class="date"><%= comment.created_at %></span>
  </div>
<% end %>
