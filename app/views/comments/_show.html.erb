<%= div_for comment do %>
  <hr/>
  <div>
    <b><%= link_to comment.user.profile.full_name, "mailto:#{ comment.user.email }" %></b>
    <%= distance_of_time_in_words_to_now(comment.created_at) %> ago write:
    <% if can(:remove_comment, comment) %>
        <%= link_to "Delete", custom_news_comment_path(comment.custom_news, comment), :method => :delete ,  :confirm => 'Are you sure?', :remote => true %>
    <% end %>
  </div>
  <div>
    <%= link_to_if can(:change_comment, comment), comment.body, edit_custom_news_comment_path(comment.custom_news, comment), :remote => true, :title => "click for edit" %>
  </div>
<% end %>
