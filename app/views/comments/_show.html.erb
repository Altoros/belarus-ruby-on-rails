<div id=<%= 'comment' + show.id.to_s %>>
  <hr/>
  <div>
    <b><%= h(show.author) %></b> <%= distance_of_time_in_words_to_now(show.created_at) %> ago write:
    <%= link_to_if true, "Delete", show, method: :delete ,  confirm: 'Are you sure?', :remote => true %>
  </div>
  <div>
    <%= link_to_if true, show.body, edit_comment_path(show), remote: true, title: "click for edit" %>
  </div>
</div>