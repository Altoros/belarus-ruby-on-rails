<% unless @comment.new_record? %>
    $("#comments").prepend("<%= escape_javascript(render "comments/show", :comment => @comment) %>");
    var comment_div = $("#<%= dom_id @comment %>");
    comment_div.hide().slideToggle("slow");
    comment_notify("Your comment was successfully added.");
    $("#comment_body").val("");
<% else %>
    comment_notify("The length of the comment should be more then 4 symbols!");
<% end %>
