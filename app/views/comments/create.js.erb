<% if @saved %>
    $("#comments").prepend("<%= escape_javascript(render partial: "comments/show", collection: [@comment]) %>");
    $("#comment<%= @comment.id %>").hide();
    $("#comment<%= @comment.id %>").slideToggle("slow");
    comment_notify("Comment <%= @comment.id %> was successfully added");
    $("#comment_body").val("");
    $("#comment_author").val("");
<% else %>
    comment_notify("You don't write a comment (its length must be greater then 4)!!!");
<% end %>