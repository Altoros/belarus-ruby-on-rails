<% unless @comment.new_record? %>
    $("#comments").append("<%= escape_javascript(render "comments/show", :comment => @comment) %>");
    var comment_div = $("#<%= dom_id @comment %>");
    comment_div.hide().slideToggle("slow");
    comment_notify(I18n.t('articles.comment_added'));
    $("#comment_body").val("");
<% else %>
    comment_notify(I18n.t('articles.comment_length_warning'));
<% end %>
