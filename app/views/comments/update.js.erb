<% if @saved %>
    var comment_div = $("#<%= dom_id @comment %>");
    comment_div.slideToggle("fast", function () {
        comment_div.html("<%= escape_javascript(render :partial => "comments/show", :collection => [@comment]) %>")
                    .hide().slideToggle("fast");
    });
    $("#comment_body").val("");
    $("#comment_author").val("");
<% end %>
comment_notify("<%= @notify %>");
