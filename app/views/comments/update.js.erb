<% if not (newbody = params[:comment][:body]).empty? %>
    <% @comment.body = newbody %>
    $("#comment<%= params[:id] %>").html("<%= escape_javascript(render :partial => "comments/show", :collection => [@comment]) %>");
  <% if @comment.save %>
        $("#commentnotice").html("Comment <%= params[:id] %> was successfully changed");
  <% else %>
        $("#commentnotice").html("Comment <%= params[:id] %> was successfully changed");
  <% end %>
<% else %>
    $("#commentnotice").html("Write something");
<% end %>
