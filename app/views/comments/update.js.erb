<% unless @comment.errors.present? %>
    var comment_div = $("#<%= dom_id @comment %>");
    comment_div.slideToggle("fast", function () {
        comment_div.html("<%= escape_javascript(render :partial => "comments/show", :collection => [@comment], :as => "comment") %>")
                    .hide().slideToggle("fast");
    });
    $("#comment_body").val("");
    $("#comment_author").val("");
    comment_notify("Comment was updated successfully");
<% else %>
    comment_notify("<%= @comment.errors.messages.values.first.first %>")
<% end %>
