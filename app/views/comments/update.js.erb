<% if @saved %>
    $("#comment<%= params[:id] %>").slideToggle("fast", function () {
    $("#comment<%= params[:id] %>").html("<%= escape_javascript(render :partial => "comments/show", :collection => [@comment]) %>");
    $("#comment<%= params[:id] %>").hide();
    $("#comment<%= params[:id] %>").slideToggle("fast")
    });
<% end %>
comment_notify("<%= @notify %>");
