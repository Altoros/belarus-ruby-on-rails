<% if @article.nil? %>

   There is no article with this id.

<% else %>

  <p>
    <b>Title:</b>
    <%= @article.title %>
  </p>

  <p>
    <b>Content:</b>
    <%= raw @article.content %>
  </p>

  <%= render "comments/index" %>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>

<% end %>
