<tr>
  <td>
    <%= link_to user.profile.full_name, profile_path(user.profile) %>
    <%= t('devise.info.this_is_you') if user == current_user %>

  </td>
  <td>
    <%= mail_to user.email %>
  </td>
  <td><%= I18n.l(user.created_at, :format => :short) %></td>
  <td>
  <%= div_for user, :class => "link_to_admin" do %>
    <%= link_to(link_to_admin_title(user), admin_user_path(user), :method => :put) if can? :update, user %>
  <% end %>
  </td>
</tr>
