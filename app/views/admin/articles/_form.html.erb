<%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
<%= form_for([:admin, @article]) do |f| %>
  <%= errors_for(@article, "Opps, unable to save article") %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.cktext_area :content %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select(:status, [['published', 0], ['unpublished', 1]]) %>
  </div>
  <div class="actions">
    <% if params[:id] != nil %>
      <%= submit_tag 'Update' %>
      <%= submit_tag 'Delete', :onclick=>'update_edit_article_action();' %>
    <% else %>
      <%= submit_tag 'Create' %>
    <% end %>
  </div>
<% end %>
