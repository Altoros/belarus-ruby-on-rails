  <%= form_for @profile, :html => { :method => 'put', :multipart => true } do |f| %>
    <table class="loginTBL">
        <%= render 'profiles/userpic_edit', :user => @profile.user, :f => f %>
        <tr>
            <th colspan="2" class="title"><%= t('profile.main_info') %></th>
        </tr>
        <%= render 'profiles/name', :f => f %>
        <%= render 'profiles/level', :f => f %>
        <%= render 'profiles/locale', :f => f %>
        <tr>
          <th colspan="2" class="title"><%= t('profile.password') %></th>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to t('admin.users.reset_password'), user_reset_password_path(:id => @profile.user.id) %></td>
        </tr>
        <%= render 'profiles/subscription', :user => @profile.user, :f => f %>
        <tr>
          <td></td>
          <td class="save">
            <button type="submit"><span><span><%= t('common.update') %></span></span></button>
          </td>
        </tr>
    </table>
  <% end %>
