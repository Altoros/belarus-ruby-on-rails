<%= form_for(@profile) do |f| %>
  <%= errors_for(@profile, t('errors.changes_not_saved')) %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :comments_subscription, t('profile.comments_subscription') %>
    <%= f.check_box :comments_subscription %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
