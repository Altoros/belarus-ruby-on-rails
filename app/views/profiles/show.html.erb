<p>
  <b><%= t('activerecord.attributes.profile.first_name')%>:</b>
  <%= @profile.first_name %>
</p>

<p>
  <b><%= t('activerecord.attributes.profile.last_name')%>:</b>
  <%= @profile.last_name %>
</p>

<p>
  <b><%= t('profile.subscribed_for_comments') %></b>
  <%= @profile.subscribed_for_comments %>
</p>

<% if @providers %>
    <h4><%= t('profile.social_networks') %>:</h4>
    <ul>
    <% @providers.each do |provider| %>
        <% provider_link(provider, @profile.user.id) do |item| %>
            <li><%= provider.printable_name %>: <%= item %></li>
        <% end %>
    <% end %>
    </ul>
<% end %>

<%= link_to t('profile.edit_profile'), edit_profile_path(@profile) %>
