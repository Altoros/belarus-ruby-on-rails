jQuery(window).load(function () {
    $.getScript('http://widgets.twimg.com/j/2/widget.js', function () {
        jQuery.each(twitter_blocks_settings, function () {
            new TWTR.Widget({
                id:'twtr-search-widget-' + this.id,
                version:2,
                type:'search',
                search:this.search,
                interval:30000,
                title:this.title,
                subject:this.subject,
                width:250,
                height:300,
                theme:{
                    shell:{
                        background:'#5484a3',
                        color:'#ffffff'
                    },
                    tweets:{
                        background:'#ffffff',
                        color:'#31322c',
                        links:'#5484a3'
                    }
                },
                features:{
                    scrollbar:false,
                    loop:true,
                    live:true,
                    hashtags:true,
                    timestamp:true,
                    avatars:true,
                    toptweets:true,
                    behavior:'default'
                }
            })
                    .setFooterText(this.footer_text)
                    .render()
                    .start();
        });
    });
});